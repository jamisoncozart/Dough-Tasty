@using DoughTasty.Models;
@{
  Layout = "_Layout";
}

<div class="container">
  <div class="card vendorCard">
    <div class="card-header">
      <h2>@Model.Title</h2>
    </div>
    <div class="card-body">
      <p>Description: @Model.Description</p>
      @if(Model.GetAllOrders().Count == 0)
      {
        <h3>There are currently no orders for this vendor.</h3>
      }
      <div class="row">
        @foreach (Order order in Model.GetAllOrders())
        {
          <p>Order!</p>
        }
        <div class="col-md-6">
          <a href="/vendors/@Model.Id/orders/new">
            <button class="btn btn-info btn-block" type="submit">Add Order</button>
          </a>
        </div>
        <div class="col-md-6">
          <form action="/vendors/@Model.Id/delete" method="post">
            <button class="btn btn-danger btn-block" type="submit" name="button">Delete</button>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>